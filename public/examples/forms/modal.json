        "addButton": {
          "block": "button",
          "label": "Добавить"
        }
      },
      "items": [
        {
          "label": "Содержание жилья",
          "value": "0.00",
          "name": "name1"
        },
        {
          "label": "Пеня",
          "value": "0.00",
          "name": "name2"
        },
        {
          "label": "Антена",
          "value": "0.00",
          "name": "name3"
        },
        {
          "label": "Иное",
          "value": "0.00",
          "name": "name4"
        }
      ]
