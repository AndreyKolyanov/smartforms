  "footer": [
    {
      "block": "checkbox",
      "checkboxCls": "iagree",
      "cls": "vp-dialog-control",
      "name": "iagree",
      "checked": true,
      "htmlLabel": "Я соглашаюсь с <a href=\"/legal-information/docs/\" target=\"_blank\">условиями<\/a> договора-оферты"
