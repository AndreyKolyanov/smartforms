div.form-group(class="#{_prefix}-form-group error-#{name} #{cls}" +
    (required ? " required" : "") +
    (readOnly ? " readonly" : "") +
    (disabled ? " disabled" : ""))

    if label && !suppressLabel
        label.control-label(for=id) #{label}

    div.controls
        block inner

        if description
            span.help-block #{description}

        span.help-block.errortext(style="display:none;")
