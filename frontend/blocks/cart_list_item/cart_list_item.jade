li.item(class="#{_prefix}cart-list-item #{cls}" id="#{id}")
    .item-head.clearfix
        .modal-header
            .header-wrap(class=imgUrl ? "" : "without-image")
                if imgUrl
                    .header-image
                        span
                            img(src=imgUrl width="60")
                .header-title
                    .item-title= title
                        .b-payment-side
                            span.ruble= "₽"
                            span.item-price= data.sum
                    h5.item-subtitle= subtitle
                    span.panel-collapser
                        span= "—"
                        a.link-show(href="#")=" показать платеж"
