mixin buttonClose
    button.close(
        type="button"
        data-dismiss="modal"
        aria-label="Close"
    )
        i.glyphicon.glyphicon-remove

.modal.fade(
    class="#{_prefix}-modal"
    tabindex=-1
    role="dialog"
)
    .modal-dialog(
        role="document"
        class="modal-#{size || 'md'}"
    )
        .modal-content
            if title
                .modal-header
                    +buttonClose

                    .header-wrap
                        .header-image
                            span
                                img(src=imgUrl)

                        .header-title
                            h4.modal-title #{title}

            .modal-body
                if !title
                    +buttonClose

            if footer.length
                .modal-footer
