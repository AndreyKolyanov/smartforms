mixin buttonClose
    button.close(
        type="button"
        data-dismiss="modal"
        aria-label="Close"
    )
        i.glyphicon.glyphicon-remove

.modal.fade(
    class="#{_prefix}-modal"
    tabindex=-1
    role="dialog"
)
    .modal-dialog(
        role="document"
        class="modal-#{size || 'md'}"
    )
        .modal-content
            if title
                .modal-header
                    +buttonClose

                    .header-wrap
                        .header-image
                            span
                                img(src=imgUrl)

                        .header-title
                            h4 #{title}

            .modal-body
                if !title
                    +buttonClose
            if help
                .modal-help
                    a.g-link-dashed(
                        data-toggle="modal"
                        data-target="#help_modal_#{id}"
                    ) #{help.message}

            if footer.length
                .modal-footer
