extends ../base/base.jade

block inner
    div(class="#{_prefix}-checkbox #{cls}")
        .checkbox
            .checkbox-wrapper
                label.checkbox-label
                    input(
                        id=id
                        name=name
                        type="checkbox"
                        checked=(checked && "checked")
                        class=checkboxCls
                    )
            .text-wrapper
                span!=htmlLabel
